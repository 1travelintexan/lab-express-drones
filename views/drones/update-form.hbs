<h2>Update the Drone</h2>


 <form action="drones/{{data._id}}/edit" method="POST">

    <label for="title">Title</label>
    <input type="text" name="title" value="{{data.name}}">
        <br>
    <label for="propellers">Propellers</label>
    <input type="text" name="propellers" value="{{data.propellers}}">
        <br>
    <label for="maxSpeed">Speed</label>
    <input type="text" name="maxSpeed" value="{{data.maxSpeed}}">
         <br>
     <button type="submit">Update</button>

 </form>

 